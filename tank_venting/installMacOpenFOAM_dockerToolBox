# File
#     installMacOpenFOAM_dockerToolbox
#
# Description
#     This script will work with DockerToolbox on MAC-OSX
#
#     - Script should be launched from docker terminal by the command
#
#         "docker-machine ssh default $HOME/installMacOpenFOAM+ $HOME"
#
#     - Pull OpenFOAM-v2006 from docker hub if it does not exist in local
#       environment 
#     - Create a container with the name of_v2012
#         To login as root
#          *  Root: to login as root run command "su root"
#          password: openfoam
#
# NOTE
#     This script should be placed in home area 
#     To post-process, please install Paraview in your MAC
#
#------------------------------------------------------------------------------

username="$USER"
user="$(id -u)"
home="${1:-$HOME}"

imageName="openfoamplus/of_v2012_centos73:release"
containerName="of_v2012"
displayVar="$DISPLAY"
export FOAM_PROJECT_DIR=/usr/lib/openfoam/openfoam2012


# List container in docker environment:
echo "*********************************************************************"
echo "The following Docker containers are present on your system:"
echo "*********************************************************************"

docker ps -a 
echo "*********************************************************************"
echo ""
echo "Creating Docker OpenFOAM container ${containerName}"

# Create docker container with  OpenFOAM environment
docker run -it -d --name ${containerName} --user=${user}    \
    -e HOME=${home}                                         \
    -e USER="docker"                                        \
    -e QT_X11_NO_MITSHM=1                                   \
    -e FOAM_PROJECT_DIR					    \
    -e DISPLAY=${displayVar}                                \
    --workdir="${home}"                                     \
    --volume="${home}:${home}"                              \
    --volume="/etc/group:/etc/group:ro"                     \
    --volume="/etc/passwd:/etc/passwd:ro"                   \
    --volume="/etc/sudoers.d:/etc/sudoers.d:ro"             \
    -v=/tmp/.X11-unix:/tmp/.X11-unix ${imageName}           \
    /bin/bash --rcfile /opt/openfoam/setEnv.sh

echo "Container ${containerName} was created."

echo "*********************************************************************"
echo "Run the ./startMacOpenFoam_dockerToolbox  script to launch container"
echo "*********************************************************************"
